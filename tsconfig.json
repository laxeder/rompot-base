{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "esModuleInterop": true,
    "strict": false,
    "declaration": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@enums/*": ["./src/enums/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src"]
}
